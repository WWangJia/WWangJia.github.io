<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.b304.wang.saflightsample">

    <application
        android:name=".App.SaflightSampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="1920" />
        <meta-data
            android:name="design_height"
            android:value="1128" />

        <!-- 首页 -->
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseActivity" />
        <!-- 测试页面 -->
        <activity android:name=".test.activity.TestActivity">
            <intent-filter>
                <action android:name="TestActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 读取串口数据 -->
        <service android:name=".service.ReadDataService" />

        <activity android:name=".activity.UnitSettingActivity" />
        <activity android:name=".activity.GroupSetActivity" />
        <activity android:name=".activity.GroupShowSetActivity" />
        <activity android:name=".activity.SelectTrainActivity"></activity>
    </application>

</manifest>