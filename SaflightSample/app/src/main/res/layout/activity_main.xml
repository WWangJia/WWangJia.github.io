<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:background="@mipmap/home_tab"
            android:paddingTop="40px">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/logo_color"
                android:textSize="40px"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="210px"
                    android:layout_height="70px"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/logo_text" />

                <View
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="test" />

            </LinearLayout>


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/white" />

        <FrameLayout
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@mipmap/main_bg">
            <FrameLayout
                android:layout_width="1820px"
                android:layout_height="240px"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingBottom="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_tabs_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:padding="5px">

                    <LinearLayout
                        android:id="@+id/FunGames"
                        android:layout_width="235px"
                        android:layout_height="214px"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/home_tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="125px"
                            android:layout_height="108px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_tab1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="单元设置"
                            android:textColor="@color/home_tab_text"
                            android:textSize="30px" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/PEquality"
                        android:layout_width="235px"
                        android:layout_height="214px"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/home_tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="125px"
                            android:layout_height="108px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_tab2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="组合设置"
                            android:textColor="@color/home_tab_text"
                            android:textSize="30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/motorSkill"
                        android:layout_width="235px"
                        android:layout_height="214px"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/home_tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="125px"
                            android:layout_height="108px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_tab3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="组合展示"
                            android:textColor="@color/home_tab_text"
                            android:textSize="30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sportsmanship"
                        android:layout_width="235px"
                        android:layout_height="214px"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/home_tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="125px"
                            android:layout_height="108px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_tab4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="单元测试"
                            android:textColor="@color/home_tab_text"
                            android:textSize="30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/GenSportsCourses"
                        android:layout_width="235px"
                        android:layout_height="214px"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/home_tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="125px"
                            android:layout_height="108px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_tab5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="单元测试"
                            android:textColor="@color/home_tab_text"
                            android:textSize="30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/MidtermExamPE"
                        android:layout_width="235px"
                        android:layout_height="214px"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/home_tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="125px"
                            android:layout_height="108px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_tab2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="单元测试"
                            android:textColor="@color/home_tab_text"
                            android:textSize="30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/StudyEvaluation"
                        android:layout_width="235px"
                        android:layout_height="214px"
                        android:layout_marginLeft="20px"
                        android:background="@mipmap/home_tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="125px"
                            android:layout_height="108px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_tab6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="单元测试"
                            android:textColor="@color/home_tab_text"
                            android:textSize="30px" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="bottom"
            android:background="@color/home_bottom_bg">
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15px"
                    android:src="@mipmap/device_on" />

                <TextView
                    android:id="@+id/light_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="正在连接..."
                    android:layout_marginLeft="5px"
                    android:textSize="25px" />

            </LinearLayout>


        </FrameLayout>

    </LinearLayout>

</FrameLayout>
